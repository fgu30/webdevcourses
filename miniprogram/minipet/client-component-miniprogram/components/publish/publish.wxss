.publish-wrap {

}

.publish-wrap .item {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  color: #666;
  border-bottom: solid 1rpx #eee;
}

.publish-wrap .label {
  flex: 100;
  padding-left: 20rpx;
}

.publish-wrap .field {
  flex: 275;
  display: flex;
  align-items: center;
}

.publish-wrap .field radio-group label {
  display: inline-block;
  width: 150rpx;
}

.publish-wrap .field radio-group label > view {
  display: inline-block;
}

.publish-wrap .button {
  height: 76rpx;
  margin: 20rpx;
  background-color: #f29a38;
  border-radius: 12rpx;
  text-align: center;
  line-height: 76rpx;
  color: #fff;
}