.search-wrap {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.search-wrap .search {
  display: flex;
  height: 88rpx;
  align-items: center;
  background-color: #52b9d2;
}

.search-wrap .search > view:first-child {
  flex: 1;
  display: flex;
  margin: 20rpx;
  background-color: #fff;
  height: 60rpx;
  border-radius: 8rpx;
  padding: 0 20rpx;
  align-items: center;
}

.search-wrap .search > view:first-child input {
  width: 100%;
}

.search-wrap .search > view:last-child {
  width: 100rpx;
  color: #fff;
}

.list {
  flex: 1;
  background-color: #eee;
  overflow: hidden;
}

.list .item {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.list .item > view:first-child {
  color: #f29a38;
}

.list .item > view:last-child {
  font-size: 32rpx;
}