.map-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.map-container > view {
  height: 88rpx;
  display: flex;
}

.map-container > view > view {
  flex: 1;
  text-align: center;
  line-height: 88rpx;
  font-weight: normal;
  color: #fff;
}

.publish {
  background-color: #f29a38;
}

.search {
  background-color: #52b9d2;
}

map {
  flex: 1;
  width: 100%;
}

cover-image.center {
  width: 76rpx;
  height: 76rpx;
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
}

cover-image.pin {
  width: 44rpx;
  height: 62rpx;
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  top: 50%;
  transform: translate(-22rpx, -62rpx);
}